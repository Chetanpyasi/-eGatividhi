<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/light_blue"
    tools:context=".signupactivity">

    <!-- Title Text: eGatividhi -->
    <TextView
        android:id="@+id/title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:text="eGatividhi"
        android:textColor="@color/black"
        android:textSize="64sp"
        android:textStyle="bold"
        android:fontFamily="@font/kurale"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- Subtitle: AI+GIS -->
    <TextView
        android:id="@+id/subtitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="AI ML"
        android:textColor="@color/black"
        android:textSize="24sp"
        android:fontFamily="@font/kurale"
        android:textStyle="bold"
        app:layout_constraintTop_toBottomOf="@id/title"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- Description Text -->
    <TextView
        android:id="@+id/description"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:text="Progress Based Monitoring System"
        android:textColor="@color/black"
        android:textSize="20sp"
        android:fontFamily="@font/kurale"
        app:layout_constraintTop_toBottomOf="@id/subtitle"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- Name Input -->
    <EditText
        android:id="@+id/name"
        android:layout_width="0dp"
        android:layout_height="50dp"
        android:layout_marginTop="24dp"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:hint="Your Name"
        android:inputType="textPersonName"
        android:background="@drawable/edittext"
        android:paddingStart="18dp"
        android:textColorHint="#777777"
        android:fontFamily="@font/kurale"
        app:layout_constraintTop_toBottomOf="@id/description"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- Email Input -->
    <EditText
        android:id="@+id/email"
        android:layout_width="0dp"
        android:layout_height="50dp"
        android:layout_marginTop="12dp"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:hint="Your Email"
        android:inputType="textEmailAddress"
        android:background="@drawable/edittext"
        android:paddingStart="18dp"
        android:textColorHint="#777777"
        android:fontFamily="@font/kurale"
        app:layout_constraintTop_toBottomOf="@id/name"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- Username Input -->
    <EditText
        android:id="@+id/username"
        android:layout_width="0dp"
        android:layout_height="50dp"
        android:layout_marginTop="12dp"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:hint="Username"
        android:inputType="textPersonName"
        android:background="@drawable/edittext"
        android:paddingStart="18dp"
        android:textColorHint="#777777"
        android:fontFamily="@font/kurale"
        app:layout_constraintTop_toBottomOf="@id/email"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- Password Input -->
    <EditText
        android:id="@+id/password"
        android:layout_width="0dp"
        android:layout_height="50dp"
        android:layout_marginTop="12dp"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:hint="Password"
        android:inputType="textPassword"
        android:background="@drawable/edittext"
        android:paddingStart="18dp"
        android:textColorHint="#777777"
        android:fontFamily="@font/kurale"
        app:layout_constraintTop_toBottomOf="@id/username"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- Repeat Password Input -->
    <EditText
        android:id="@+id/repeat_password"
        android:layout_width="0dp"
        android:layout_height="50dp"
        android:layout_marginTop="12dp"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:hint="Repeat Password"
        android:inputType="textPassword"
        android:background="@drawable/edittext"
        android:paddingStart="18dp"
        android:textColorHint="#777777"
        android:fontFamily="@font/kurale"
        app:layout_constraintTop_toBottomOf="@id/password"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- Ministry Signup Button -->
    <Button
        android:id="@+id/ministry_signup"
        android:layout_width="0dp"
        android:layout_height="48dp"
        android:layout_marginTop="12dp"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:text="Ministry Signup"
        android:textColor="@color/white"
        android:backgroundTint="#FF5722"
        android:fontFamily="@font/kurale"
        android:textSize="16sp"
        app:layout_constraintTop_toBottomOf="@id/repeat_password"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- Normal User Signup Button -->
    <Button
        android:id="@+id/normal_signup"
        android:layout_width="0dp"
        android:layout_height="48dp"
        android:layout_marginTop="8dp"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:text="Project Manager Signup"
        android:textColor="@color/white"
        android:backgroundTint="#4CAF50"
        android:fontFamily="@font/kurale"
        android:textSize="16sp"
        app:layout_constraintTop_toBottomOf="@id/ministry_signup"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>
